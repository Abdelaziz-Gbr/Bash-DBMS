#!/usr/bin/bash

echo "                |============================| "
echo "                |Welcome To DBMS Bash Project| "
echo "                |============================| "
echo

while true 
do
    clear
    PS3="Enter your choice (1-5): "
    echo "Choose an action:"
    select action in "Create a database" "List all databases" "Connect to a database" "Drop a database" "Exit DBMS"
    do
        case "$action" in
            "Create a database")
                ./createDB
                break
                ;;

            "List all databases")
                ./listAllDB
                read -r -p "Press any key to continue..." -n1 -s
                echo
                break
                ;;

            "Connect to a database")
               ./connectToDB
                break
                ;;

            "Drop a database")
                read -p "Enter the name of the database to delete: " dbname
                ./dropDB "$dbname"
                break
                ;;

            "Exit DBMS")
                echo "Exitting.....!"
                exit
                ;;

            *)
                echo "Invalid input. Please choose a number from the menu."
                ;;
        esac
    done
done

