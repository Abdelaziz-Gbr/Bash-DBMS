#! /usr/bin/bash

while true; do

	clear
	read -p "Enter your Database name or type "0" to go back: " name

	# 0 To go back
	if [[ $name == "0" ]]; then
		read -r -p "Press any key to try again..." -n1 -s
		exit 1
	fi

    resultOfInputValidation=$(./inputValidator CHARS_ONLY $name)
    
    if [[ $resultOfInputValidation != 0 ]]
    then
        echo " Database name should be any combination of letters from A to Z or a to z"
        continue
    fi

	# If directory is found
	if [[ -d ./mydb/$name ]]; then
		echo Database with the same name already exists
		continue
	fi
	break
done

mkdir -p ./mydb/$name

exit 0
