#!/usr/bin/bash

# ─── ANSI Colors ─────────────────────────────
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
BLUE='\033[1;34m'
NC='\033[0m' # No Color

dbName=$1

dir=./mydb/$dbName

if [[ ! -d "$dir" ]]; then
    echo -e "${RED}❌ [ Error ] Database '$dbName' does not exist!${NC}"
    exit 1
fi

echo -e "${CYAN}\n📋 [ Info ] Showing tables in database '$dbName'...${NC}"
echo -e "${CYAN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
tables=$(ls "$dir")
for table in $tables; do
    echo -e "${BLUE}➤ $table${NC}"
done
echo -e "${CYAN}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"

read -n1 -rp $'\n🔙 [ Info ] Press any key to return to the previous menu...' -s
